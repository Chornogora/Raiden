<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <filter-mapping>
    <filter-name>AdminAuthorizationFilter</filter-name>
    <url-pattern>/pages/Administrator/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>ClientAuthorizationFilter</filter-name>
    <url-pattern>/pages/Client/Cabinet2.jsp</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>ClientAuthorizationFilter</filter-name>
    <url-pattern>/pages/Client/Account.jsp</url-pattern>
  </filter-mapping>

  <welcome-file-list>
    <welcome-file>pages/Client/MainPage.jsp</welcome-file>
  </welcome-file-list>
  
</web-app>
